#!/bin/bash

#ВАЖНО! Числовые индексы в массивах должны совпадать!

#Массив с типами файлов
mime_types[0]="text/plain"; 
mime_types[1]="text/html";
mime_types[666]="other"


#Массив с директорями в которые будем разносить файлы.
target_directories[0]="txt";
