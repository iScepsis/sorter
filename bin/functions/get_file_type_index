#!/bin/bash

#Получаем индекс типа файла из массива mime_types (располагается в файле bin/file_types)

function get_file_type_index(){
    type_is_found=0
    
    for i in ${!mime_types[*]}
    do
    
       #     printf "Index is %s\n" $i
        if [[ $CURRENT_FILE_TYPE == ${mime_types[$i]} ]]; then
            FILE_TYPE_INDEX=$i
            type_is_found=1
            printf "Index is %s\n" $i
        fi
    done

    if [[ $type_is_found -eq 0 ]]; then
        FILE_TYPE_INDEX=666
        printf "Index is not found for type %s\n" $CURRENT_FILE_TYPE
    fi    
}
